<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:background="@android:color/transparent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/back_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/btnTop"
            android:layout_width="@dimen/inside_dimen_big"
            android:layout_height="@dimen/inside_dimen_big"
            android:background="@drawable/inside_button"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="42dp"
            android:gravity="center"
            />



        <TextView
            android:id="@+id/btnRight"
            android:gravity="center"

            android:layout_width="@dimen/inside_dimen_big"
            android:layout_height="@dimen/inside_dimen_big"
            android:background="@drawable/inside_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
           android:layout_marginRight="@dimen/margin_inside_big"
           android:layout_marginEnd="@dimen/margin_inside_big"
            />




        <TextView
            android:id="@+id/btnLeft"
            android:gravity="center"

            android:layout_width="@dimen/inside_dimen_big"
            android:layout_height="@dimen/inside_dimen_big"
            android:background="@drawable/inside_button"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
           android:layout_marginLeft="@dimen/margin_inside_big"
           android:layout_marginStart="@dimen/margin_inside_big"
            />



        <TextView
            android:id="@+id/btnBottom"
            android:layout_width="@dimen/inside_dimen_big"
            android:layout_height="@dimen/inside_dimen_big"
            android:background="@drawable/inside_button"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_inside_big"
            android:gravity="center"

            />





</RelativeLayout>





</LinearLayout>